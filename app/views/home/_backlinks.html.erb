<% if @backlinks.empty? %>
  <p>No backlinks yet.</p>
<% else %>
  <table>
    <tr style="border:none;">
      <td style="border:none;"></td>
      <td style="border:none;"></td>
      <td>backlinks</td>
    </tr>
    <% @backlinks.each.with_index do |bl, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td>
          <a href="/<%= bl['type'].downcase[0] %>/<%= bl['id'][0..7] %>">
            <i class="<%= bl['type'].downcase %>-icon"></i> <%= bl['title'] %>
          </a>
        </td>
        <td><%= bl['count'] %></td>
      </tr>
    <% end %>
  </table>
<% end %>