<% if @current_tenant.allow_file_uploads? && @current_studio.allow_file_uploads? %>
  <% if @current_studio.within_file_upload_limit? %>
    <div>
      <%= form.label :files, "Attach files" %>
      <%= form.file_field :files, multiple: true %>
    </div>
  <% else %>
    <p>
      <%= octicon 'alert' %>
      Attachments are disabled because this studio has reached its file storage limit.
      <br/>
      Contact a studio admin to request a limit increase.
    </p>
  <% end %>
<% end %>