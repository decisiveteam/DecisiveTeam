<h1><%= @team.name %></h1>

<h2>Team Members (<%= @team.team_members.count %>) <a href="<%= @team.path %>/invite"> + </a></h2>
<ul>
  <% @team.team_members.limit(10).each do |tm| %>
    <li><%= tm.user.email %></li>
  <% end %>
</ul>

<h2>Decisions (<%= @team.decisions.count %>) <a href="<%= @team.path %>/new_decision"> + </a></h2>
<% open_decisions = @team.decisions.where(status: [nil, 'open']).order(id: :desc) %>
<h5>Open (<%= open_decisions.count %>)</h5>
<ul>
  <% open_decisions.limit(10).each do |d| %>
    <li><a href="<%= d.path %>"><%= d.question %></a></li>
  <% end %>
  <% if open_decisions.count > 10 %><!-- TODO --><% end %>
</ul>
<% finalized_decisions = @team.decisions.where(status: 'finalized').order(id: :desc) %>
<h5>Finalized (<%= finalized_decisions.count %>)</h5>
<ul>
  <% finalized_decisions.limit(10).each do |d| %>
    <li><a href="<%= d.path %>"><%= d.question %></a></li>
  <% end %>
  <% if finalized_decisions.count > 10 %><!-- TODO --><% end %>
</ul>
<% draft_decisions = @team.decisions.where(status: 'draft', created_by: current_user).order(id: :desc) %>
<h5>Your Drafts (<%= draft_decisions.count %>)</h5>
<ul>
  <% draft_decisions.limit(10).each do |d| %>
    <li><a href="<%= d.path %>"><%= d.question %></a></li>
  <% end %>
  <% if draft_decisions.count > 10 %><!-- TODO --><% end %>
</ul>

<h2>Tags (<%= @team.tags.count %>) <a href="<%= @team.path %>/new_tag"> + </a></h2>
<ul>
  <% @team.tags.limit(10).each do |tag| %>
    <li><a href="<%= tag.path %>"><%= tag.name %></a></li>
  <% end %>
</ul>
